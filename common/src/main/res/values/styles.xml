<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default -->
    <style name="defaultTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">@null</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/bg_button_label</item>
    </style>

    <style name="defaultEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">140</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>



</resources>